# read by tcsh:
# /<.tcshrc>|<.cshrc>
umask 22
set path = (/sbin /bin /usr/sbin /usr/bin /usr/local/sbin /usr/local/bin $HOME/bin)

alias ls        'ls -GF'
alias grep      'grep --color=auto'
alias egrep     'egrep --color=auto'
alias fgrep     'fgrep --color=auto'

setenv  EDITOR  vim
setenv  PAGER   less
setenv  BLOCKSIZE   K

set color
set colorcat
#set p_cobia    = "%{\e[38;5;179m%}"
#set p_sturgeon = "%{\e[3;32m%}"
#set p_shiner   = "%{\e[3;31m%}"
#set p_wahoo    = "%{\e[2;36m%}"
#set p_yellow   = "%{\e[0;33m%}"
#set p_end      = "%{\e[0m%}"

if($?TMUX) then
    setenv TERM screen-256color
endif

if ($?prompt) then
    # An interactive shell -- set some stuff up
    #    set prompt = "${p_wahoo}%m${p_end}:${p_yellow}%~ ${p_end}%# "
    #unset p_blue p_cobia p_sturgeon p_shiner p_wahoo p_end

    set prompt = "%N@%m:%~ %# " 
    set promptchars = "%#"

    set filec
    set history = 1000
    set savehist = (1000 merge)
    set autolist = ambiguous
    # Use history to aid expansion
    set autoexpand
    set autorehash
    set mail = (/var/mail/$USER)

    if ( $?tcsh ) then
        bindkey "^W" backward-delete-word
        bindkey -k up history-search-backward
        bindkey -k down history-search-forward
        bindkey "\e[3~"   delete-char
        bindkey "\e[1~"   beginning-of-line        # xterm
        bindkey "\e[4~"   end-of-line              # xterm
        source ~/.tcsh-completion
    endif
endif
