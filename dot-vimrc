" pathogen
call pathogen#infect()
syntax on
filetype plugin indent on

" terminal capable of 256 colors
set t_Co=256

" dark background, solarized theme uses this(?)
set background=dark

let g:solarized_termcolors=256 " 256 | 16
let g:solarized_termtrans = 0
let g:solarized_underline = 1
let g:solarized_italic = 1
let g:solarized_bold = 1
let g:solarized_contrast = "high" " normal | high | low
let g:solarized_visibility= "normal" " normal | high | low

colorscheme solarized

" map for pasting
map <F2> <Esc>:set paste<CR>i
map <F3> <Esc>:set nopaste<CR>
map - <ESC>/

" map for taglist plugin
nnoremap <silent> <F8> :TlistToggle<CR>

" Remember and restore last cursor position
set viminfo='10,\"100,:20,%,n~/.viminfo

function! ResCur()
  if line("'\"") <= line("$")
    normal! g`"
    return 1
  endif
endfunction

augroup resCur
  autocmd!
  autocmd BufWinEnter * call ResCur()
augroup END

" folding for C files
autocmd FileType c setlocal foldmethod=indent foldlevel=1 nofoldenable

" tab completion
set wildmode=longest,list,full
set wildmenu

" hilight search matches
set hlsearch

" line numbering
set number

" Mouse integration. Requires X11 aware vim if clipboard is used
set mouse=a

" allow backspace over everything
set backspace=indent,eol,start
	
" various
set nomodeline
set nocompatible
set autoindent
set tabstop=4
set showcmd
